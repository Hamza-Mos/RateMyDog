<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>RateMyDog</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles.css">
  </head>
  <body>

    <!-- Navigation bar: -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">RateMyDog</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/rate">Rate</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/history">History</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Dog image: -->
    <img id="dogImg" src="<%= imgURL %>" alt="">

    <!-- Form to submit rating of dog image -->
    <form id="rateForm" action="/rate" method="post" onsubmit="cacheForm()">
      <div class="rate">
        <input type="radio" id="star10" name="rate" value="10" onchange="submitForm(this.form, 10)"/>
        <label for="star10" title="text">10 stars</label>
        <input type="radio" id="star9" name="rate" value="9" onchange="submitForm(this.form, 9)"/>
        <label for="star9" title="text">9 stars</label>
        <input type="radio" id="star8" name="rate" value="8" onchange="submitForm(this.form, 8)"/>
        <label for="star8" title="text">8 stars</label>
        <input type="radio" id="star7" name="rate" value="7" onchange="submitForm(this.form, 7)"/>
        <label for="star7" title="text">7 stars</label>
        <input type="radio" id="star6" name="rate" value="6" onchange="submitForm(this.form, 6)"/>
        <label for="star6" title="text">6 stars</label>
        <input type="radio" id="star5" name="rate" value="5" onchange="submitForm(this.form, 5)"/>
        <label for="star5" title="text">5 stars</label>
        <input type="radio" id="star4" name="rate" value="4" onchange="submitForm(this.form, 4)"/>
        <label for="star4" title="text">4 stars</label>
        <input type="radio" id="star3" name="rate" value="3" onchange="submitForm(this.form, 3)"/>
        <label for="star3" title="text">3 stars</label>
        <input type="radio" id="star2" name="rate" value="2" onchange="submitForm(this.form, 2)"/>
        <label for="star2" title="text">2 stars</label>
        <input type="radio" id="star1" name="rate" value="1" onchange="submitForm(this.form, 1)"/>
        <label for="star1" title="text">1 star</label>
      </div>
    </form>

    <script src="index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
  </body>
</html>